<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <vars module="Magento_Catalog">
        <var name="product_image_white_borders">1</var>

        <var name="gallery">
	    	 <var name="navdir">horizontal</var> <!-- Sliding direction of thumbnails (horizontal/vertical) -->
	    	 <var name="arrows">false</var> <!-- Turn on/off arrows on the sides preview (true/false) -->
	    	 <var name="navarrows">false</var> <!-- Turn on/off on the thumbs navigation sides (true/false) -->
	    	 <var name="navtype">thumbs</var> <!-- Sliding type of thumbnails (slides/thumbs) -->
	    	 <var name="transition">
	            <var name="effect">crossfade</var> <!-- Sets transition effect for slides changing (slide/crossfade/dissolve) -->
	            <var name="duration">500</var> <!-- Sets transition duration in ms -->
	        </var>
	        <var name="fullscreen">
	        	<var name="navdir">horizontal</var> <!--Sliding direction of thumbnails in full screen(horizontal/vertical)  -->
	        </var>
	    </var>

	    <var name="breakpoints">
            <var name="mobile">
                <var name="conditions">
                    <var name="max-width">767px</var>
                </var>
                <var name="options">
                    <var name="options">
                        <var name="navdir">horizontal</var> <!-- Sliding direction of thumbnails (horizontal/vertical) -->
                    </var>
                </var>
            </var>
        </var>
    </vars>
	
    <media>
		<images module="Magento_Catalog">
		    <image id="category_page_grid" type="small_image">
		        <width>640</width> <!-- Image width in px --> 
		        <height>700</height> <!-- Image height in px -->
		        <frame>false</frame>
		    </image>
		    <image id="cart_page_product_thumbnail" type="small_image">
                <width>120</width>
                <height>120</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>125</width>
                <height>125</height>
            </image>
		    <image id="product_page_image_medium" type="image">
		        <width>900</width>
		        <height>900</height>
		        <frame>false</frame>
		    </image>
		    <image id="swatch_thumb_base" type="swatch_thumb">
                <width>75</width>
                <height>75</height>
                <background>[255, 25, 2]</background>
            </image>
            <image id="related_products_list" type="small_image">
			    <width>640</width>
			    <height>640</height>
			</image>
		</images>
	</media>
</view>